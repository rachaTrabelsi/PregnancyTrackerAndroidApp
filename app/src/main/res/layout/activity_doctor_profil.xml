<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.esprit.pregnancytracker.main.DoctorProfil"
              android:background="@drawable/backgroundhomelogin">


    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgprofildoct"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/doctorname"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:fontFamily="casual"
            android:text="Name :"
            android:textColor="#000"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:fontFamily="casual"
            android:text="Email :"
            android:textColor="#000"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:fontFamily="casual"
            android:text="Adresse :"
            android:textColor="#000"
            android:textSize="18dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100.1dp"
        android:layout_marginLeft="30dp"
            android:layout_marginBottom="30dp"
            android:textSize="18dp"
            android:textColor="#000"
            android:fontFamily="casual"
            android:text="Test Doctor"/>
        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="18dp"
            android:textColor="#000"
            android:fontFamily="casual"
            android:text="testdoctor@test.com"/>
        <TextView
            android:id="@+id/tv_adrsse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="18dp"
            android:textColor="#000"
            android:fontFamily="casual"
            android:text="aaa,aa,a"/>

    </LinearLayout>



</LinearLayout>
