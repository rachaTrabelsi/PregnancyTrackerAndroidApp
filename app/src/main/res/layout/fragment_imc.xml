<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context="com.esprit.pregnancytracker.Fragments.ImcFragment">

    <!-- TODO: Update blank fragment layout -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight:"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:textSize="17sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="29dp"
        android:paddingRight="24dp">
        <com.xw.repo.BubbleSeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekbarweight"
            app:bsb_bubble_color="#FC77AF"
            app:bsb_track_color="#FC77AF"
            app:bsb_bubble_text_color="@android:color/black"
            app:bsb_second_track_color="#FC77AF"
            app:bsb_max="300"
            app:bsb_min="10"
            app:bsb_progress="0"
            app:bsb_section_count="5"
            app:bsb_section_text_position="bottom_sides"
            app:bsb_show_progress_in_float="true"
            app:bsb_auto_adjust_section_mark="true"
            app:bsb_show_section_text="true"
            app:bsb_show_thumb_text="true"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height:"
        android:layout_marginLeft="25dp"
        android:textSize="17sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="29dp"
        android:paddingRight="24dp"
        android:gravity="center">
        <com.xw.repo.BubbleSeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekbarheight"
            app:bsb_bubble_color="#FC77AF"
            app:bsb_track_color="#FC77AF"
            app:bsb_bubble_text_color="#FC77AF"
            app:bsb_second_track_color="#FC77AF"
            app:bsb_max="3"
            app:bsb_min="0.5"
            app:bsb_progress="0"
            app:bsb_section_count="5"
            app:bsb_section_text_position="bottom_sides"
            app:bsb_show_progress_in_float="true"
            app:bsb_auto_adjust_section_mark="true"
            app:bsb_show_section_text="true"
            app:bsb_show_thumb_text="true"
            />
    </LinearLayout>
</LinearLayout>
</FrameLayout>
